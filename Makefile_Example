#================================================================================#
# This makefile copied from B. Jonkman by J. Michalakes on 29-Jan-2013,          #
# adapted from Crunch (M. Buhl on 25-Jan-2013).                                  #
#                                                                                #
# This makefile has been tested on Windows 7 with gfortran.                      #
# This makefile works with mingw32-make.exe.                                     #
#                                                                                #
# It was designed to be used with:                                               #
#     Example                 (v1.00.04,      29-Jan-2013)                       #
#     NWTC Subroutine Library (CSC version    29-Jan-2013)                       #
#                                                                                #
# Older versions of ModuleName and NWTC Library may not work with this makefile. #
#================================================================================#

   # 32-bit or 64-bit?
BITS = 32
#BITS = 64


   # Location of source files for ModuleName and the NWTC Library.  You will probably need to change these for your system.

OS = Linux

# these settings are overridden below
ifeq ($(OS),Windows_NT)
   LIB_DIR = C:/Users/bjonkman/Documents/DATA/DesignCodes/miscellaneous/nwtc_subs/SVNdirectory/trunk/source
else
   LIB_DIR = $(HOME)/PC/CAEtools/Miscellaneous/NWTC_Library/trunk/source
endif
REGISTRY    = Registry
MODNAME_DIR = .

LIB_DIR = ../../../NWTC_Library/source

REGISTRY = /home/jmichala/FAST_CSC/FAST/Registry/Source/registry.exe


   # Name of compiler to use and flags to use.

FC     = gfortran
FFLAGS = -O3 -m$(BITS) -fbacktrace -ffree-line-length-none -x f95-cpp-input -ffree-line-length-none -DBYTES_IN_INT=4 -DBYTES_IN_REAL=4 -DBYTES_IN_DBL=8
FFLAGS = -O3 -fbacktrace -ffree-line-length-none -x f95-cpp-input -ffree-line-length-none -DBYTES_IN_INT=4 -DBYTES_IN_REAL=4 -DBYTES_IN_DBL=8
LDFLAGS = -O3 -fbacktrace

   # Precision.

# Use "SingPrec" for single precision and "DoubPrec" for double precision.  You may also need to change an option switch to make constants DP.
PREC = SingPrec

   #==========================================================#
   # You should not need to change anything beyond this point #
   #==========================================================#

   # System-specific settings.

ifeq ($(OS),Windows_NT)
      # Windows
   DEL_CMD   = del
   EXE_EXT   = _gwin$(BITS).exe
   INTER_DIR = Obj_win$(BITS)
   MD_CMD    = @mkdir
   OBJ_EXT   = .obj
   PATH_SEP  = \\
   SYS_FILE  = SysGnuWin
else
      # Linux
   DEL_CMD   = rm -f
   EXE_EXT   = _glin$(BITS)
   INTER_DIR = Obj_lin$(BITS)
   MD_CMD    = @mkdir -p
   OBJ_EXT   = .o
   PATH_SEP  = /
   SYS_FILE  = SysGnuLinux
endif

   # Destination and RootName for executable

OUTPUT_NAME = Template_Driver
DEST_DIR    = .


   # Library files.

LIB_SOURCES =         \
	$(PREC).f90        \
	$(SYS_FILE).f90    \
	NWTC_IO.f90        \
	ModMesh.f90        \
	ModMesh_Types.f90        \
	NWTC_Aero.f90      \
	NWTC_Library.f90   \
	NWTC_Num.f90       


MODNAME_SOURCES   =             \
	Example.f90             \
        Glue.f90                \
	Example_Types.f90

vpath %.f90 $(LIB_DIR) $(MODNAME_DIR)
vpath %.mod $(INTER_DIR)
vpath %.obj $(INTER_DIR)

LIB_OBJS    = $(LIB_SOURCES:.f90=.obj)
MODNAME_OBJS = $(MODNAME_SOURCES:.f90=.obj)

   # Rule to do everything.

all:     default
default: Example_Types.f90 $(INTER_DIR) $(DEST_DIR)/$(OUTPUT_NAME)$(EXE_EXT)

   # General rule for making the files.

%.obj: %.f90
	$(FC) $(FFLAGS) -c $< -o $(INTER_DIR)/$@ -J $(INTER_DIR)

   #  Dependency rules.

ModMesh.obj:             $(PREC).obj
$(SYS_FILE).obj:         $(PREC).obj
NWTC_IO.obj:             $(SYS_FILE).obj
NWTC_Num.obj:            NWTC_IO.obj
NWTC_Aero.obj:           NWTC_IO.obj           NWTC_Num.obj
NWTC_Library.obj:        NWTC_Aero.obj         ModMesh.obj

Example_Types.f90:       Registry_Example.txt
Example_Types.obj:       NWTC_Library.obj
Example.obj:             Example_Types.obj
Template.obj:            ModuleName_A.obj      NWTC_Library.obj
Template_DriverCode.obj: Template.obj          NWTC_Library.obj


#$(OUTPUT_NAME)$(EXE_EXT): Template_DriverCode.obj

   # Make sure the destination directory for the intermediate files exist.

$(INTER_DIR):
	$(MD_CMD) $(INTER_DIR)


   # Run the registry if the input file changes.


Example.f90:
	$(REGISTRY) -f -template Example Ex

Registry_Example.txt:
	$(REGISTRY) -f -registry Example Ex

Example_Types.f90: Registry_Example.txt
	$(REGISTRY) Registry_Example.txt


   # For compiling Template_DriverCode.

$(DEST_DIR)/$(OUTPUT_NAME)$(EXE_EXT): $(LIB_OBJS) $(MODNAME_OBJS) | $(INTER_DIR)
	$(FC) $(LDFLAGS) -I $(INTER_DIR) -o $(DEST_DIR)/$(OUTPUT_NAME)$(EXE_EXT) \
	$(foreach src, $(LIB_OBJS), $(addprefix $(INTER_DIR)/,$(src))) \
	$(foreach src, $(MODNAME_OBJS), $(addprefix $(INTER_DIR)/,$(src)))

   # Cleanup afterwards.

clean:
	$(DEL_CMD) $(INTER_DIR)$(PATH_SEP)*.mod $(INTER_DIR)$(PATH_SEP)*.obj Example_Types.f90 Example.f90 Registry_Example.txt

